@{
    ViewData["Title"] = "DeleteOrder";
    BusinessObject.Models.Order Order = ViewData["Order"] != null ? (BusinessObject.Models.Order)ViewData["Order"] : new BusinessObject.Models.Order();
    List<BusinessObject.Models.OrderDetail> OrderDetails = ViewData["OrderDetails"] != null ? (List<BusinessObject.Models.OrderDetail>)ViewData["OrderDetails"] : new List<BusinessObject.Models.OrderDetail>();
}

<h1>Delete</h1>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">@ViewData["ErrorMessage"]</div>
}
@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">@ViewData["SuccessMessage"]</div>
}

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-4">
        <h4 class="text-primary">Order</h4>
        <dl class="row">
            <dt class="col-sm-4">
                Order Id
            </dt>
            <dd class="col-sm-8">
                @Order.OrderId
            </dd>
            <dt class="col-sm-4">
                Ordered Date
            </dt>
            <dd class="col-sm-8">
                @Order.OrderDate
            </dd>
            <dt class="col-sm-4">
                Shipped Date
            </dt>
            <dd class="col-sm-8">
                @Order.ShippedDate
            </dd>
         @*    <dt class="col-sm-4">
                Total
            </dt>
            <dd class="col-sm-8">
                @Order.Total
            </dd> *@
            <dt class="col-sm-4">
                Status
            </dt>
            <dd class="col-sm-8">
                <span class="text-warning">Pending</span>
            </dd>
            <dt class="col-sm-4">
                Freight
            </dt>
            <dd class="col-sm-8">
                @Order.Freight
            </dd>
        </dl>
        <hr />
        <h4 class="text-success">Member</h4>
        <dl class="row">
            <dt class="col-sm-4">
                Name
            </dt>
            <dd class="col-sm-8">
                @Order.Member.CompanyName
            </dd>
            <dt class="col-sm-4">
                Email
            </dt>
            <dd class="col-sm-8">
                @Order.Member.Email
            </dd>
            <dt class="col-sm-4">
                City
            </dt>
            <dd class="col-sm-8">
                @Order.Member.City
            </dd>
            <dt class="col-sm-4">
                Country
            </dt>
            <dd class="col-sm-8">
                @Order.Member.Country
            </dd>
        </dl>
    </div>
    <div class="col-md-8">
        <h4 class="text-danger">Items</h4>
        <table class="table">
            <thead>
                <tr class="bg-dark text-white">
                    <th>
                        Name
                    </th>
                    <th>
                        Unit Price
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Discount
                    </th>
                    <th>
                        Total
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in OrderDetails)
                {
                    <tr>
                        <td>
                            @item.Product.ProductName
                        </td>
                        <td>
                            @item.UnitPrice
                        </td>
                        <td>
                            @item.Quantity
                        </td>
                        <td>
                            @item.Discount
                        </td>
                        <td>
                            @((item.UnitPrice ?? 0) * (1 - (decimal)(item.Discount ?? 0)) * (item.Quantity ?? 0))

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" name="orderIdStr" value="@Order.OrderId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to List</a>
</form>


